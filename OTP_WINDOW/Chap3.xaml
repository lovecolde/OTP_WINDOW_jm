<Page x:Class="OTP_WINDOW.Chap3"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:OTP_WINDOW"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="825"
      Title="Chap3">

    <Grid Background="White" Margin="0,0,0,0">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="20" Height="500" Width="725">
            <TextBlock x:Name="QuizQuestion" Text="Q 1. 오픈소스 사용 시 주의가 필요한 고려사항 3가지는?" 
                       Style="{StaticResource MainTitleBlockStyle}" HorizontalAlignment="Center"/>
            <TextBox x:Name="AnswerTextBox" Width="300" Height="30" Margin="20"
                 TextAlignment="Center" FontSize="16" FontWeight="Bold"
                 Text="드래그 후 답을 입력하세요"/>
            <Button x:Name="SubmitButton" Style="{DynamicResource OTPButton2Style}" FontSize="20" Content="제출" Click="SubmitButton_Click" Width="100" Height="50"/>
            <TextBlock x:Name="FeedbackTextBlock" Text="" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Foreground="Red" Margin="20,0,0,0"/>
        </StackPanel>
    </Grid>
</Page>
